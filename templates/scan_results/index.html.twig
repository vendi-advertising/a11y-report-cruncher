{% extends 'base.html.twig' %}

{% block title %}Hello ScanResultsController!{% endblock %}

{% block body %}

    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Url</td>
                <td>Message</td>
                <td>Impact</td>
                <td>Name</td>
                <td>Tags</td>
            </tr>
        </thead>
        <tbody>
    {% for r in report %}
            <tr>
                <td>{{r.id}}</td>
                <td>{{r.url}}</td>
                <td>{{r.message}}</td>
                <td>{{r.impact}}</td>
                <td>{{r.name}}</td>
                <td>{{r.tag_name}}</td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

{% endblock %}
